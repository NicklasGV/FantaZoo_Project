<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkgreen_trans"
    >

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:contentDescription="Zookeeper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_other"
        android:text="Name:"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_img"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_name_Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_other"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_zk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_other"
        android:text="Weapon:"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        />
    <TextView
        android:id="@+id/tv_weapon_Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_other"
        android:text="No weapon"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintStart_toEndOf="@+id/tv_zk"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        />

    <TextView
        android:id="@+id/tv_cage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_other"
        android:text="Cage:"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_zk"
        />
    <TextView
        android:id="@+id/tv_cage_Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_other"
        android:text="No Cage"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintStart_toEndOf="@+id/tv_zk"
        app:layout_constraintTop_toBottomOf="@+id/tv_zk"
        />

    <ImageButton
        android:id="@+id/ib_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_cage_Show"
        android:src="@drawable/baseline_edit_24"
        />
    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ib_edit"
        app:layout_constraintTop_toBottomOf="@+id/tv_cage_Show"
        android:src="@drawable/baseline_delete_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>